{
    "manifest_version": 2,
    "name": "Voluble",
    "version": "1.1.4",
  
    "description": "Voluble is a handy extension that adds a volume control to the Audible web player ",

    "permissions": ["activeTab"],

    "icons": {
      "48": "icons/logo2-48.png",
      "96": "icons/logo2-96.png"
    },

    "browser_specific_settings": {
      "gecko": {
        "id": "voluble@vito"
      }
    },

    "content_scripts": [
      {
        "matches": [
          "*://*.audible.com/webplayer*", 
          "*://*.audible.de/webplayer*", 
          "*://*.audible.net/webplayer*", 
          "*://*.audible.fr/webplayer*",
          "*://*.audible.ca/webplayer*",
          "*://*.audible.co.uk/webplayer*",
          "*://*.audible.com.au/webplayer*",
          "*://*.audible.co.jp/webplayer*",
          "*://*.audible.it/webplayer*",
          "*://*.audible.in/webplayer*",
          "*://*.audible.es/webplayer*"
        ],
        "js": ["voluble.js"]
      }
    ]
  }
  